<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="stepper_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/marcellus</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sub_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textColor">@color/base_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="link_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textColor">@color/base_orange</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="button_style" parent="sub_title_style">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/widget_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="button_with_shadow_style">
        <item name="android:background">@drawable/button_with_shadow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/widget_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="base_text_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textColor">@color/base_orange</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/widget_height</item>
        <item name="android:layout_marginStart">@dimen/end_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/end_start_margin</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:padding">@dimen/widget_padding</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSelectHandle">@drawable/ic_text_select_handle</item>
        <item name="android:textSelectHandleLeft">@drawable/ic_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/ic_text_select_handle_right</item>
        <item name="android:textColorHighlight">@color/base_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="hintTextAppearance">@style/edittext_label</item>
        <item name="android:textColorHint">@color/base_gray</item>
    </style>

    <style name="edittext_label">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/base_gray</item>
    </style>

    <style name="radio_button_style" parent="edittext_style">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">?attr/selectableItemBackground</item>
        <item name="android:drawableEnd">@drawable/rectangle_btn_radio</item>
    </style>

</resources>