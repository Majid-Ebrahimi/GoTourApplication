<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/pressed_background_color_orange"/>
            <stroke android:width="2dp"
                android:color="@color/base_orange"/>
            <corners android:radius="@dimen/small_radius"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="false" android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke android:width="2dp"
                android:color="@color/base_normal_grey"/>
            <corners android:radius="@dimen/small_radius"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="false" android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke android:width="2dp"
                android:color="@color/base_orange"/>
            <corners android:radius="@dimen/small_radius"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke android:width="2dp"
                android:color="@color/base_orange"/>
            <corners android:radius="@dimen/small_radius"/>
        </shape>
    </item>
</selector>