<resources>

<!--ToDone dimen-->

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/base_orange</item>
        <item name="colorPrimaryVariant">@color/base_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="stepper_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">@dimen/spacing_xx_middle</item>
        <item name="android:layout_marginBottom">@dimen/spacing_mx_large</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/marcellus</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sub_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textColor">@color/base_grey</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
    </style>

    <style name="linear_layout_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
    </style>

    <style name="link_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textColor">@color/base_orange</item>
        <item name="android:padding">@dimen/spacing_x_small</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="button_style" parent="sub_title_style">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/size_xm_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="button_with_shadow_style">
        <item name="android:background">@drawable/button_with_shadow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/size_xm_large</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="base_text_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textColor">@color/base_orange</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="card_sub_title_text_style" parent="base_text_style">
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="card_title_text_style" parent="card_sub_title_text_style">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
    </style>

    <style name="main_sub_title_text_style" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_x_middle</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginEnd">@dimen/spacing_xx_middle</item>
        <item name="android:layout_marginStart">@dimen/spacing_xx_middle</item>

    </style>

    <style name="edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_xm_large</item>
        <item name="android:layout_marginStart">@dimen/spacing_xx_middle</item>
        <item name="android:layout_marginEnd">@dimen/spacing_xx_middle</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:padding">@dimen/spacing_x_middle</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSelectHandle">@drawable/ic_text_select_handle</item>
        <item name="android:textSelectHandleLeft">@drawable/ic_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/ic_text_select_handle_right</item>
        <item name="android:textColorHighlight">@color/base_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_x_middle</item>
        <item name="android:textStyle">bold</item>
        <item name="hintTextAppearance">@style/edittext_label</item>
        <item name="android:textColorHint">@color/base_grey</item>
    </style>

    <style name="edittext_label">
        <item name="android:layout_marginBottom">@dimen/spacing_middle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/gilroy_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_x_middle</item>
        <item name="android:textColorHint">@color/base_grey</item>
    </style>

    <style name="radio_button_style" parent="edittext_style">
        <item name="android:layout_width">@dimen/spacing_m_ultra_large</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">?attr/selectableItemBackground</item>
        <item name="android:drawableEnd">@drawable/rectangle_btn_radio</item>
    </style>

    <style name="online_status">
        <item name="android:layout_width">@dimen/size_x_medium</item>
        <item name="android:layout_height">@dimen/size_x_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/ic_active_status</item>
    </style>

    <style name="search_button_style" parent="button_style">
        <item name="android:layout_width">@dimen/size_xm_large</item>
        <item name="android:layout_marginStart">@dimen/spacing_xx_middle</item>
        <item name="android:layout_marginTop">@dimen/spacing_m_large</item>
        <item name="android:layout_marginEnd">@dimen/spacing_xx_middle</item>
        <item name="android:contentDescription">@string/search_button_description</item>
        <item name="android:foreground">@drawable/ic_search</item>
        <item name="android:foregroundGravity">center</item>
    </style>

    <style name="search_edittext_style" parent="edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/spacing_xx_middle</item>
        <item name="android:layout_marginTop">@dimen/spacing_m_large</item>
        <item name="android:layout_marginEnd">@dimen/spacing_xx_middle</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="bottom_navigation_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_xm_large</item>
        <item name="android:layout_marginTop">@dimen/spacing_sm_large</item>
        <item name="android:layout_marginStart">@dimen/spacing_xx_middle</item>
        <item name="android:layout_marginEnd">@dimen/spacing_xx_middle</item>
        <item name="android:layout_marginBottom">@dimen/spacing_m_large</item>
        <item name="android:background">@drawable/bottom_navigation_background</item>
    </style>

    <style name="main_back_button_style">
        <item name="android:layout_width">@dimen/size_x_large</item>
        <item name="android:layout_height">@dimen/size_x_large</item>
        <item name="android:layout_marginStart">@dimen/spacing_xx_middle</item>
        <item name="android:layout_marginTop">@dimen/spacing_m_large</item>
        <item name="android:background">@drawable/pressed_background_light_grey</item>
        <item name="android:drawableEnd">@drawable/ic_round_arrow_back</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/spacing_x_medium</item>
        <item name="android:contentDescription">@string/main_back_button_description</item>
    </style>

    <style name="forward_button_style">
        <item name="android:layout_width">@dimen/size_xmm_large</item>
        <item name="android:layout_height">@dimen/size_x_large</item>
        <item name="android:drawableEnd">@drawable/ic_round_arrow_forward</item>
        <item name="android:background">@drawable/forward_setting_menu_background</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">@dimen/spacing_x_medium</item>
        <item name="android:contentDescription">@string/forward_button_description</item>
    </style>

    <style name="small_forward_button_style">
        <item name="android:layout_width">@dimen/size_x_large</item>
        <item name="android:layout_height">@dimen/size_x_large</item>
        <item name="android:drawableEnd">@drawable/ic_round_small_arrow_forward</item>
        <item name="android:background">@drawable/forward_setting_menu_background</item>
        <item name="android:contentDescription">@string/forward_button_description</item>
    </style>

    <style name="main_title_style" parent="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_m_large</item>
        <item name="android:textSize">@dimen/text_size_m_large</item>
    </style>

    <style name="setting_menu_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/spacing_xx_middle</item>
        <item name="android:layout_marginTop">@dimen/spacing_sm_large</item>
        <item name="android:layout_marginEnd">@dimen/spacing_xx_middle</item>
        <item name="android:background">@drawable/grey_button_background</item>
    </style>

    <string name="online_status_content_description">online status content description</string>

    <style name="image_with_radius_style">
        <item name="cornerSize">10%</item>
    </style>

</resources>